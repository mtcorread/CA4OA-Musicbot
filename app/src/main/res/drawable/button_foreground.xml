<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_foreground.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowPurple" /> <!-- Color when pressed -->
            <corners android:radius="8dp" /> <!-- Match the radius with your button's background -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent for the default state -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
