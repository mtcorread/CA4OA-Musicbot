<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Robot ImageView -->
    <ImageView
        android:id="@+id/robot_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/roboicon"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/left_chat_view"
        android:contentDescription="@string/icon" />

    <!-- LEFT CHAT BOX -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#E0E0E0"
        android:padding="10dp"
        android:layout_marginEnd="80dp"
        android:layout_toEndOf="@id/robot_image_view"> <!-- Align to the end of the robot ImageView -->

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textIsSelectable="true"/>

    </LinearLayout>

    <!-- RIGHT CHAT BOX -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_view"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#CFBDF1"
        android:padding="10dp"
        android:layout_marginStart="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text_view"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textIsSelectable="true"/>
    </LinearLayout>

</RelativeLayout>